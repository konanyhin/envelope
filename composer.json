{
    "name": "konanyhin/envelope",
    "description": "Beautiful PHP mail builder",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Konanyhin\\Envelope\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Arsenii Konanykhin",
            "email": "arsenii.konanykhin@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "refactor": "rector --ansi",
        "fix:cs": "php-cs-fixer fix --ansi",
        "test:type-coverage": "pest --type-coverage --exactly=100",
        "test:cs": "php-cs-fixer check --diff --ansi",
        "test:coverage": "pest --coverage --exactly=100",
        "test:unit": "pest --colors=always",
        "test:types": "phpstan --ansi",
        "test:refactor": "rector --dry-run --ansi",
        "test": [
            "@test:type-coverage",
            "@test:unit",
            "@test:cs",
            "@test:types",
            "@test:refactor"
        ]
    },
    "require-dev": {
        "rector/rector": "^2.2",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.91",
        "pestphp/pest": "^4.1",
        "symfony/var-dumper": "^8.0",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require": {
        "spatie/mjml-php": "^1.2"
    }
}
